<h1>タスク一覧</h1>

<%= form_tag [ :search, :tasks ], :method => :get, :style => "text-align: right" do %>
<%= text_field_tag "query", params[:query] %>
<%= submit_tag "検索" %>
<% end %>
<%= render "categories" if Category.all.present? %>

<%= render "navigation" %>

<table class="tasks">
  <col class="name" />
  <col class="due_date" />
  <% @tasks.each do |task| %>
  <tr>
    <td><%= link_to(task.name, task) %></td>
    <td><%= task.due_date %></td>
    <td>
      <%= links_for(task) %>
    </td>
  </tr>
  <% end %>
</table>

<p>
  <%= will_paginate(@tasks, :previous_label => '&lt;-', :next_label => '-&gt;',
  :inner_window => 2, :outer_window => 2) %>
</p>
<p>
  <%= link_to "新規登録", [ :new, :task ] %>
</p>
