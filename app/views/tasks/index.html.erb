<h1>タスク一覧</h1>

<%= form_tag [ :search, :tasks ], :method => :get, :style => "text-align: right" do %>
<%= text_field_tag "query", params[:query] %>
<%= submit_tag "検索" %>
<% end %>

<ul class="navigation">
  <% if params[:action] == "index" || params[:action] == "search" %>
  <li class="selected">未完了タスク</li>
  <% else %>
  <li><%= link_to "未完了タスク", :tasks %></li>
  <% end %>
  <% if params[:action] == "done" %>
  <li class="selected">完了したタスク</li>
  <% else %>
  <li><%= link_to "完了したタスク", [ :done, :tasks ] %></li>
  <% end %>
</ul>

<table class="tasks">
  <col class="name" />
  <col class="due_date" />
  <% @tasks.each do |task| %>
  <tr>
    <td><%= link_to(task.name, task) %></td>
    <td><%= task.due_date %></td>
    <td>
      <%= links_for(task) %>
    </td>
  </tr>
  <% end %>
</table>

<p>
  <%= will_paginate(@tasks, :previous_label => '&lt;-', :next_label => '-&gt;',
  :inner_window => 2, :outer_window => 2) %>
</p>
<p>
  <%= link_to "新規登録", [ :new, :task ] %>
</p>
